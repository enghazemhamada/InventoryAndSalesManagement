@model SalesInvoice

@{
    ViewData["Title"] = "Delete Sales Invoice";
    Layout = "/Features/Shared/_Layout.cshtml";
}

<h2>Delete Sales Invoice</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Sales Invoice</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvoiceNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvoiceNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
